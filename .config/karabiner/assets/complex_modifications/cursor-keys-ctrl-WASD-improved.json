{
    "title": "Gaming Cursor Keys Plus [AD]",
    "rules": [{
        "description": "Change control + shift + A/D to Option + Left/Right",
        "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "a",
                    "modifiers": {
                        "mandatory": [
                            "control",
                            "shift"
                        ]
                    }
                },
                "to": [{
                    "key_code": "left_arrow",
                    "modifiers": [
                        "option"
                    ]
                }]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "d",
                    "modifiers": {
                        "mandatory": [
                            "control",
                            "shift"
                        ]
                    }
                },
                "to": [{
                    "key_code": "right_arrow",
                    "modifiers": [
                        "option"
                    ]
                }]
            }
        ]
    }]
}