{
    "title": "Enable Forward and Backward Buttons on Mouse",
    "rules": [{
            "description": "Enable Mouse Key 4 (Back)",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "button4"
                },
                "to": [{
                    "key_code": "left_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                }]
            }]
        },
        {
            "description": "Enable Mouse Key 5 (Forward)",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "button5"
                },
                "to": [{
                    "key_code": "right_arrow",
                    "modifiers": [
                        "left_command"
                    ]
                }]
            }]
        }
    ]
}