#!/usr/bin/env zsh

if (( $+commands[karabiner_cli] )); then
    alias kb='karabiner_cli'
fi

if (( $+commands[exa] )); then
    alias e='exa -lah'
    alias ee='exa -lh'
fi

if (( $+commands[trash] )); then
    alias rm='trash'
fi

if (( $+commands[foaas-cli] )); then
    alias f='foaas-cli'
fi

if (( $+commands[base16-manager] )); then
    alias bxm='base16-manager'
fi

if (( $+commands[pyenv] )); then
    alias p='pyenv'
    alias pv='pyenv version'
    alias pvs='pyenv versions'
fi

if (( $+commands[R] )); then
    alias r='r --no-save'
fi

if (( $+commands[radian] )); then
    alias rr="radian"
fi


## plistbuddy alias
alias plistbuddy='/usr/libexec/PlistBuddy'

## echo each path/fpath entry on newline
# `print -rl -- "${(@s/:/)PATH}"` also works
alias path='echo -e ${PATH//:/\\n}'
alias fpath='echo -e ${FPATH//:/\\n}'

# git aliases
alias gs='git status'
alias gcu='git checkout upstream'

alias hsg='history | grep'
alias please='sudo'
alias pls='sudo'
alias plz='sudo'
